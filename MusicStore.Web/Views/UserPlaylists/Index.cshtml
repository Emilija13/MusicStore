@model IEnumerable<MusicStore.Domain.Domain.UserPlaylist>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Playlists</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card">
                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                    <img src="@item.Image" class="card-img-top fixed-size-img" alt="Playlist Image" />
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.PlaylistName</h5>
                    </div>
                </a>
            </div>
        </div>
    }
</div>
