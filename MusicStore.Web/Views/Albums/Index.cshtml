@model IEnumerable<MusicStore.Domain.Domain.Album>

@{
    ViewData["Title"] = "Explore Albums";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Explore Albums</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card">
                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                    <img src="@item.AlbumImage" class="card-img-top fixed-size-img" alt="Album Image" style="width: 100%; height: 200px; object-fit: cover;" />
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.AlbumName</h5>
                    </div>
                </a>
            </div>
        </div>
    }
</div>
