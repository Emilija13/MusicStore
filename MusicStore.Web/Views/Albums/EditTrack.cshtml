@model MusicStore.Domain.Domain.Track

<h2>Edit Track</h2>

<form asp-action="EditTrack" method="post">
    <div class="form-group">
        <label asp-for="TrackName" class="control-label">Track Name</label>
        <input asp-for="TrackName" class="form-control" />
        <span asp-validation-for="TrackName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Minutes" class="control-label">Duration</label>
        <input asp-for="Minutes" class="form-control" />
        <span asp-validation-for="Minutes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Seconds" class="control-label">Duration</label>
        <input asp-for="Seconds" class="form-control" />
        <span asp-validation-for="Seconds" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="AlbumId" />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Edit" asp-route-id="@Model.AlbumId" class="btn btn-secondary">Back to Album Edit</a>
