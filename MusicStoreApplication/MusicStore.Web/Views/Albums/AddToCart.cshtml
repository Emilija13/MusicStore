@model MusicStore.Domain.Domain.AlbumsInCart
@{
    ViewData["Title"] = "Add to Shopping cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Add selected album to Shopping cart</h3>

<div class="row">
    <div class="col-4">

        <form asp-action="AddToCartConfirmed" method="post">
            <input type="hidden" asp-for="AlbumId" />
            <p>Enter quantity for album: "@Model.Album.AlbumName"</p>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Add To Cart" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>